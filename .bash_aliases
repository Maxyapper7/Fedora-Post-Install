### Aliases ###
# DNF
alias updt='sudo dnf update -y; sudo flatpak update -y'
alias dnfup='sudo dnf update'
alias dnfin='sudo dnf install'
alias dnfrm='sudo dnf remove'
alias dnfup='sudo dnf update'

# CD
alias .1='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# Confirmations
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

# Random
alias vi='vim'
alias ls='ls -lah --color=auto'
alias mkdir='mkdir -pv'
alias df='df -h'
